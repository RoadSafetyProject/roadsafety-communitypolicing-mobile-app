<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/signup_screen"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            style="@style/CardViewStyle"
            android:id="@+id/send"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/signup_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SEND"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@style/TextAppearance.AppCompat.Title"
                    android:background="?attr/colorPrimary"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>
                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_centerInParent="true"
                    android:scrollbarStyle="insideInset"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <ImageView
            android:layout_above="@id/send"
            android:layout_marginBottom="260dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_preview"
            android:src="@drawable/ic_now_wallpaper_grey600_48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <VideoView
            android:visibility="gone"
            android:layout_above="@id/send"
            android:id="@+id/video_preview"
            android:layout_alignTop="@id/image_preview"
            android:layout_alignBottom="@id/image_preview"
            android:layout_alignLeft="@id/image_preview"
            android:layout_alignRight="@id/image_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_preview"
            android:layout_alignBottom="@id/image_preview">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/capture_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:padding="4dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/fab_shape"
                    android:src="@drawable/ic_camera"
                    android:tint="@android:color/white"/>
                <ImageButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/capture_video"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/fab_shape"
                    android:src="@drawable/ic_videocam"
                    android:tint="@android:color/white"/>
                </LinearLayout>


            </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_above="@id/send"
            android:layout_marginBottom="-4dp"
            android:id="@+id/info"
            android:layout_width="match_parent"
            cardView:cardElevation="8dp"
            cardView:cardMaxElevation="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Report an Event"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginLeft="32dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="32dp"
                    android:textColor="?attr/colorPrimary"
                    android:text="Event Type"/>
                <Spinner
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="26dp"
                    android:layout_width="96dp"
                    android:id="@+id/event_type"
                    android:layout_height="wrap_content"></Spinner>
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelText="Title"
                    android:id="@+id/title"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lines="6"
                    app:met_baseColor="#000000"
                    app:met_primaryColor="?attr/colorPrimary"
                    app:met_floatingLabelTextSize ="16sp"
                    app:met_floatingLabelTextColor ="?attr/colorPrimary"
                    app:met_singleLineEllipsis="true"
                    android:gravity="top"
                    android:inputType="text"
                    android:background="@color/transparent"
                    android:hint="Enter the title"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    app:met_floatingLabel="highlight"
                    android:id="@+id/message"
                    app:met_floatingLabelAlwaysShown="true"
                    app:met_floatingLabelText="Description"
                    app:met_baseColor="#000000"
                    app:met_primaryColor="?attr/colorPrimary"
                    app:met_floatingLabelTextSize ="16sp"
                    app:met_floatingLabelTextColor ="?attr/colorPrimary"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:minLines="1"
                    android:gravity="top|left"
                    android:maxLines="10"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:scrollbars="vertical"
                    android:textSize="15sp"
                    android:background="@color/transparent"
                    android:hint="Enter the description of the event"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>

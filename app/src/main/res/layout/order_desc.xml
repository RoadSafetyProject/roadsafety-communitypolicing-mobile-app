<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/title"
        android:layout_marginTop="-4dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimaryDark"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?attr/colorPrimaryDark"
                android:textSize="22sp"
                android:fontFamily="@string/font_fontFamily_drawer_item"
                android:paddingLeft="16dp"
                android:id="@+id/drawer_title"
                android:text="Order Details"
                android:gravity="center_vertical"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">
        <LinearLayout
            android:id="@+id/fill_orders"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="18sp"

                android:id="@+id/verification_title"
                android:fontFamily="@string/font_fontFamily_drawer_item"
                android:text="Order details you can only view you cant edit and you have an option of canceling the order."/>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Namba mpya ya MSD"/>
                <EditText
                    android:id="@+id/msd_number_edit_text"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="15sp"
                    android:hint="1232100"
                    android:editable="false"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_900"
                    android:text="Maelezo ya bidhaa"/>
                <EditText
                    android:id="@+id/drug_type_edit_text"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="15sp"
                    android:editable="false"
                    android:hint="Paracetamol Tabs 500gm"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Kipimo cha Ugavi (U)"/>
                <EditText
                    android:id="@+id/kipimo_ugavi"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="48dp"
                    android:hint="100 tablets"
                    android:editable="false"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Kiasi Cha kuanzia"/>
                <EditText
                    android:id="@+id/kiasi_chakuanzia"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="10 Boxes"
                    android:textColorHint="@color/gray"
                    android:textSize="15sp"
                    android:editable="false"
                    android:textColor="@color/gray"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Upotevu au Marekebisho"/>

                <EditText
                    android:id="@+id/upotevu"
                    android:hint="Mzigo haujafungwa vizuri"
                    android:textColorHint="@color/gray"
                    android:layout_width="fill_parent"
                    android:gravity="bottom"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:lines="3" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Siku ambazo dawa hazikuwepo"/>

                <EditText
                    android:id="@+id/dawa_hazikuwepo"
                    android:hint="3"
                    android:textColorHint="@color/gray"
                    android:layout_width="fill_parent"
                    android:gravity="bottom"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:editable="false"
                    android:lines="1" />
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/blue_900"
                    android:layout_height="wrap_content"
                    android:text="Bei ya dawa"/>

                <EditText
                    android:id="@+id/bei_dawa"
                    android:hint="20300"
                    android:textColorHint="@color/gray"
                    android:layout_width="fill_parent"
                    android:gravity="bottom"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:editable="false"
                    android:lines="1" />
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                style="@style/CardViewStyle"
                cardCornerRadius="4dp"
                android:id="@+id/order_requests_button"
                android:clickable="true"
                android:elevation="8dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/blue_900">
                    <wappi.iRoadCommunityPolicing.Utils.CustomView
                        android:visibility="invisible"
                        android:id="@+id/progressBarCircularIndetermininate"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerInParent="true"
                        android:background="@color/blue_900" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CANCEL ORDER"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:id="@+id/send_order_button_text"
                        android:fontFamily="@style/TextAppearance.AppCompat.Title"
                        android:background="@color/blue_900"
                        android:textColor="@color/white"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/response"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:id="@+id/message"
                android:fontFamily="@style/TextAppearance.AppCompat.Title"
                android:text="@string/fragment_verification_text"/>
            <android.support.v7.widget.CardView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                style="@style/CardViewStyle"
                cardCornerRadius="4dp"
                android:id="@+id/OK_button"
                android:clickable="true"
                android:elevation="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/ok_button"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:fontFamily="@style/TextAppearance.AppCompat.Title"
                    android:background="@color/blue_900"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="2dp"
        android:src="@drawable/ic_launcher"
        android:contentDescription="dvs icon"/>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Arusha Stand"
            android:textColor="@color/dark_dvs"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/dark_dvs"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="ilakozejuamme@gamil.com"/>
        <TextView
            android:id="@+id/phone_number_title"
            android:layout_width="wrap_content"
            android:textColor="@color/dark_dvs"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Phone Number"/>
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="0714417593"/>
        <TextView
            android:id="@+id/alt_phone_number_title"
            android:layout_width="wrap_content"
            android:textColor="@color/dark_dvs"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Alternative Phone Number"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/alt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="122394885"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>